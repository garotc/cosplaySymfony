 {% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

<div class='row'>
    <div class="col-sm-12 col-md-6 useraccount m-auto p-3">
        <div class="row mb-3">
            <legend class="col-sm-12 col-md-6 m-auto text-center">Mon compte</legend>
        </div>
        <div class="row py-3">
            <div class="col-sm-12 col-md-2">Email </div><span class="col-sm-12 col-md-4 mb-3">{{ user.email }}</span>
            <div class="col-sm-12 col-md-2">Pseudo</div> <span class="col-sm-12 col-md-4">{{ user.pseudo }}</span>
        </div>
        <div class="row py-3">
            <div class="col-sm-12 col-md-2">Nom</div> <span class="col-sm-12 col-md-4 mb-3">{{ user.nom }}</span>
            <div class="col-sm-12 col-md-2">Prénom</div> <span class="col-sm-12 col-md-4">{{ user.prenom }}</span>
        </div>
        <div class="row py-3">
            <div class="col-sm-12 col-md-2">Téléphone</div> <span class="col-sm-12 col-md-4">{{ user.telephone }}</span>
        </div>
        <div class="row py-3">
            <div class="col-sm-12 col-md-6">Compte créé le {{ user.createdAt | date('d M Y',"Europe/Paris")}}</div>
            <div class="col-sm-12 col-md-6">Dernière édition {{ user.updatedAt | date('d M Y',"Europe/Paris")}}</div>
        </div>
        <div class="row py-3">
        <a href="{{path('user_edit')}}" class="btn col-sm-6 col-md-3 m-auto btn-outline-dark">Modifier</a>
        </div>
    </div>
</div>
{% endblock %}