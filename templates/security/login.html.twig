{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
      {% for message in app.flashes('compte_cree') %}
        <div class="alert alert-success text-center" role="alert">
            {{ message }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endfor %}
<div class="row">
    <div class="col-sm-12 col-md-6 test">
        <div class="row">
            <a href="" class="col-6 text-center testLeft">Me connecter</a>
            <a href="{{ path('register') }}" class="col-6 text-center noSelect testRight">M'enregistrer</a>
        </div>
    </div>
</div>
<div class="row">
    <form method="post" class='loginForm col-sm-12 col-md-6'>
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
    <div class="form-row mb-3">
            <label for="inputEmail" class="col-sm-12 col-md-2 offset-md-2">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control col-sm-12 col-md-6" required autofocus>
    </div>
    <div class="form-row mb-3">
            <label for="inputPassword" class="col-sm-12 col-md-2 offset-md-2">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control col-sm-12 col-md-6" required>
    </div>

    <div class="checkbox mb-3 col-12">
        <div class="row justify-content-center">
            <label clas="col-6">
                <input type="checkbox" name="_remember_me"> Se souvenir de moi
            </label>
        </div>
    </div>


    <div class="row mt-5">
        <button class="btn btn-lg btn-dark m-auto" type="submit">
            Me connecter
        </button>
    </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    <div class='row mt-5'><a href="{{ path('app_forgot_password_request') }}" class='mx-auto my-2'>Mot de passe oubli√© ?</a></div>
    </form>
</div>
{% endblock %}
