{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

<div class="row">
    {{ form_start(editsoloform,{"attr":{
        class:"col-sm-12 col-md-6 editInscriprionSoloForm" }}) 
    }}
        <div class="form-row mb-3">
            <legend class="text-center">Modification de l'inscription solo</legend>
        </div>

        <div class="form-row mb-3">
            <div class="col-12">
            {{form_label(editsoloform.nomPersoSolo)}}</div>
            {{form_widget(editsoloform.nomPersoSolo, {"attr":{
                class:"form-control "
            }})}}
        </div>

        <div class="form-row mb-3">
            <div class="col-sm-12 col-md-6 mb-3">
            {{form_label(editsoloform.univerSolo)}}
            {{form_widget(editsoloform.univerSolo, {"attr":{
                class:"form-control"
            }})}}
            </div>
            <div class="col-sm-12 col-md-6 mb-3">
            {{form_label(editsoloform.categorie)}}
            {{form_widget(editsoloform.categorie, {"attr":{
                class:"form-control"
            }})}}
            </div>
        </div>

        <div class="form-row mb-3">
            <div class="col-sm-12 col-md-6 mb-3">
            {{form_label(editsoloform.mediaSolo)}}
            {{form_widget(editsoloform.mediaSolo, {"attr":{
                class:"form-control"
            }})}}
            </div>
            <div class="col-sm-12 col-md-6 mb-3">
            {{form_label(editsoloform.envoiMediaSolo)}}
            {{form_widget(editsoloform.envoiMediaSolo, {"attr":{
                class:"form-control"
            }})}}
            </div>
        </div>

        <div class="form-row mb-3">
            <div class="col-sm-12 col-md-6 mb-3">
            {{form_label(editsoloform.aideSolo)}}
            {{form_widget(editsoloform.aideSolo, {"attr":{
                class:"form-control col-sm-12"
            }})}}
            </div>
        </div>

        <div class="form-row mb-3">
            <div class="col-sm-12 col-md-6 mb-3">
            {{form_label(editsoloform.accessoireSolo)}}
            {{form_widget(editsoloform.accessoireSolo, {"attr":{
                class:"form-control col-sm-12"
            }})}}
            </div>
            <div class="col-sm-12 col-md-6 mb-3">
            {{form_label(editsoloform.descriptionAccessoireSolo)}}
            {{form_widget(editsoloform.descriptionAccessoireSolo, 
            {"attr":{
                class:"form-control"
            }})}}
            </div>
        </div>

        <div class="form-row mb-3">
            <div class="col-sm-12 col-md-12">
            {{form_label(editsoloform.infosSolo)}}
            </div>
            {{form_widget(editsoloform.infosSolo, {"attr":{
            class:"form-control col-sm-12 col-md-6"
            }})}}   
        </div>

        <div class="form-row">
            <a href="{{path('admin_aff_inscription_solo')}}" class='btn btn-dark m-auto col-sm-12 col-md-4'>Retour</a>
            {{ form_widget(editsoloform.Enregistrer,{"attr":{
                class:'btn btn-info m-auto col-sm-12 col-md-4 mb-sm-5 mb-md-0'}})
            }}
        </div>
    {{ form_end(editsoloform) }}
</div>
{% endblock %}